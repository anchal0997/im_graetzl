<div class="cardBox -location -roomdemand">

  <% if room_demand.districts.present? %>
    <div class="categoryicon">
      <!--<%= "#{room_demand.districts.first.zip}" %>-->
      <% unless room_demand.room_categories.empty? %>
      <div class="category-tags">
          <ul class="tag-list -mint">
            <% room_demand.room_categories.first(1).each do |category| %>
              <li><%= category.name %></li>
            <% end %>
          </ul>
      </div>
      <% end %>
    </div>
  <% end %>

  <div class="cardBoxHeader -roomdemand">
    <%= link_to room_demand do %>
      <%= avatar_for room_demand.user, 300, class:'coverImg'  %>
    <% end %>
  </div>
  <div class="cardBoxContent -roomdemand">

    <div class="roomtype"><%= t("activerecord.attributes.room_demand.demand_types.#{room_demand.demand_type}") %></div>

    <!--<div class="location-shortfacts roomdemand-shortfacts">
      <div class="locationtxt">
        <% if room_demand.user %>
          <%= link_to room_demand.user do %>
            <div class="name"><%= "#{room_demand.user.first_name} #{room_demand.user.last_name}" %></div>
          <% end %>
        <% end %>
      </div>
    </div>-->

    <div class="slogan"><%= room_demand.slogan %></div>
    <div class="txt">
      <p><%= truncate room_demand.demand_description, length: 100 %></p>
    </div>
    <% if room_demand.wants_collaboration? %>
      <div class="collaboration icontxt">
        <svg class="icon-urgent-extra-notice-info-announcement"><use xlink:href="#icon-urgent-extra-notice-info-announcement"></use></svg>
        Interesse an gem. Kooperationen.
      </div>
    <% end %>
  </div>
</div>
