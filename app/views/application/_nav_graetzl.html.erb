<div class="mainNav">
  <%= link_to 'Home', root_path, class: 'homelink' %>
  <div class="graetzlTrigger dropdownTrigger" data-horizontal-offset="0" data-mobileNavID="graetzl">
    <svg class="icon-arrow-down-2"><use xlink:href="#icon-arrow-down-2"></use></svg>
    <span class="txt"><%= graetzl.name %></span>
  </div>
  <a href="http://blog.imgraetzl.at/" class="bloglink" target="_blank">Blog</a>

  <!-- dropDown -->
  <div class="graetzlContainer jq-dropdown jq-dropdown-tip jq-dropdown-relative jq-dropdown-anchor-left dropdown-container">
    <div class="jq-dropdown-panel nav-graetzl">
      <%= link_to graetzl_path(graetzl) do %>
        <svg class="icon-home"><use xlink:href="#icon-home"></use></svg><%= graetzl.name %>
      <% end %>
      <%= link_to graetzl_meetings_path(graetzl) do %>
        <svg class="icon-calendar-2"><use xlink:href="#icon-calendar-2"></use></svg>Treffen & Events
      <% end %>
      <%= link_to graetzl_locations_path(graetzl) do %>
        <svg class="icon-location"><use xlink:href="#icon-location"></use></svg>Anbieter & Locations
      <% end %>
      <%= link_to graetzl_zuckerls_path(graetzl) do %>
        <svg class="icon-shopping-bag"><use xlink:href="#icon-shopping-bag"></use></svg>Zuckerl & Angebote
      <% end %>
      <%= link_to graetzl_posts_path(graetzl) do %>
        <svg class="icon-head-idea-lightbulb"><use xlink:href="#icon-head-idea-lightbulb"></use></svg>Ideen im Grätzl
      <% end %>
      <%= link_to districts_path, class: 'discover' do %>
        <svg class="icon-map-location"><use xlink:href="#icon-map-location"></use></svg>Wien Übersicht
      <% end %>
    </div>
  </div>
</div>
