var formID = "<%= j(@form_id.to_s) %>";

if ($('div#stream-comment-form').length) {
  $('div#stream-comment-form').html("<%= j render partial: 'form', layout: 'shared/stream/entry_create', locals: { type: @commentable.class.name, id: @commentable.id } %>");
  $('div#stream-comment-form').after("<%= j render 'shared/stream/element_comment', user: @comment.user, activity: @comment, entry: @comment %>");

} else {

  $('form#' + formID + '.entryCommentForm').before("<%= j render 'shared/stream/comment', user: @comment.user, activity: @comment, entry: @comment %>");
  $('form#' + formID + '.entryCommentForm').replaceWith("<%= j render 'comments/form_inline', type: @commentable.class, id: @commentable.id %>");
}