console.log('add comment');
var formID = "<%= j(@form_id.to_s) %>";

if ($('div#stream-comment-form').length) {
  $('div#stream-comment-form').
    html("<%= j render partial: 'form', layout: 'shared/stream/entry_create', locals: { commentable: @commentable } %>");
  $('div#stream-comment-form').
    after("<%= j render partial: 'comment', layout: 'shared/stream/element', locals: { comment: @comment, user: @comment.user, activity: @comment, entry: @comment } %>");

} else {

  $('form#' + formID + '.entryCommentForm').
    before("<%= j render 'shared/stream/comment', user: @comment.user, activity: @comment, entry: @comment %>");
  $('form#' + formID + '.entryCommentForm').
    replaceWith("<%= j render 'comments/form_inline', commentable: @commentable %>");
}