<%= form_for [commentable, Comment.new],
  html: { class: 'entryCommentForm', remote: true } do |f| %>
  <label>
    <%= avatar_for current_user %>
    <%= f.text_area :content, placeholder: ' Kommentieren' %>
  </label>
  
  <%= hidden_field_tag :inline, true %>
  <%= f.button 'Antwort senden', data: { disable_with: 'speichert...' } %>
<% end %>