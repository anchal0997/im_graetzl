(function() {
  var $cardContainer = $("[data-behavior='posts-card-container']");
  var $paginateLink = $("[data-behavior='posts-paginate-link']");

  <% if params[:page].blank? %>
    <% if @posts.empty? %>
      $cardContainer.html("<%= j render 'empty_message' %>")
    <% else %>
      $cardContainer.find(".cardBox").remove();
      $cardContainer.append("<%= j render @posts %>")
    <% end %>
  <% else %>
    $cardContainer.append("<%= j render @posts %>");
  <% end %>

  <% if @posts.next_page.present? %>
    $paginateLink.attr('href', "<%= j next_page_url %>").addClass("show");
  <% else %>
    $paginateLink.removeClass("show");
  <% end %>
})();
