<% more ||= false %>

<div class="cardbox-wrp">
  <div class="paperCard -cord1RT -illuteaser">
    <div class="wrp">
      <div class="user">
        <% if u = current_user %>
          <%= avatar_for u %>
          <span><%= u.username %></span>
        <% else %>
          <%= image_tag('avatar/user/default.png', class: 'img-round') %>
          <span>Dein Name</span>
        <% end %>
      </div>
      <h3>Starte ein Treffen, einen Workshop oder ein Event im <%= district.numeric %>. Bezirk</h3>
      <%= link_to 'Jetzt loslegen', new_meeting_path, class: 'btn-primary' %>
    </div>
    <div class="card"></div>
  </div>
  <% if more %>
    <%= link_to 'Alle Treffen & Events', district_locations_path(district), class: 'link-more' %>
  <% end %>
</div>
