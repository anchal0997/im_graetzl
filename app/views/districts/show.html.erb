<% title t('.title', numeric: @district.numeric, name: @district.name) %>
<% meta_tag :description, t('.description', num: @district.graetzls.size, name: @district.name, numeric: @district.numeric) %>
<% meta_tag :robots, 'index, follow' %>

<section class="districts" data-mapdata="<%= @map_data %>">

  <div class="mapImgBlock">
    <div id="graetzlMapWidget"></div>
    <div class="activeArea"></div>
    <div class="navBlock">
      <h1><%= @district.name %></h1>
      <div class="links">
        <a class="toVienna" href="/wien"><svg class="icon-arrow-left-2"><use xlink:href="#icon-arrow-left-2"></use></svg> Wien Übersicht</a>
        <% @district.graetzls.each do |graetzl| %>
            <%= link_to graetzl.name, graetzl %>
        <% end %>
      </div>
      <select class="mobileSelectMenu">
        <option disabled>Grätzl wählen</option>
      </select>
    </div>
  </div>

  <% if !@meetings.empty? %>
    <div class="teaserBlock">
      <h2>Aktuelle Treffen in <%= @district.zip %> <%= @district.name %></h2>
      <div class="cardBoxCollection -tripple">
        <%= render @meetings %>
      </div>
    </div>
  <% end %>
</section>
