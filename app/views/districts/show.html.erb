<%
  meta({
    title: t('.title', numeric: @district.numeric, name: @district.name),
    description: t('.description', num: @district.graetzls.size, name: @district.name, numeric: @district.numeric),
    robots: 'index, follow',
    og_title: t('.title', numeric: @district.numeric, name: @district.name),
    og_description: t('.description', num: @district.graetzls.size, name: @district.name, numeric: @district.numeric),
    og_image: image_url('meta/og_logo.png')
  })
%>

<section class="districts" data-mapdata="<%= @map_data %>">

  <div class="mapImgBlock">
    <div id="graetzlMapWidget"></div>
    <div class="activeArea"></div>
    <div class="navBlock">
      <h1><%= @district.name %></h1>
      <div class="links">
        <a class="toVienna" href="/wien"><svg class="icon-arrow-left-2"><use xlink:href="#icon-arrow-left-2"></use></svg> Wien Übersicht</a>
        <% @district.graetzls.each do |graetzl| %>
            <%= link_to graetzl.name, graetzl %>
        <% end %>
      </div>
      <select class="mobileSelectMenu">
        <option disabled>Grätzl wählen</option>
      </select>
    </div>
  </div>

  <% if !@meetings.empty? %>
    <div class="teaserBlock">
      <h1 class="hl-main">Aktuelle Treffen in <span><%= @district.zip %> <%= @district.name %></span></h1>
      <div class="cardBoxCollection -tripple">
        <%= render @meetings %>
      </div>
    </div>
  <% end %>
</section>
