<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="field">
  <%= f.label :username %><br />
  <%= f.text_field :username, autofocus: true %>
  </div>

  <div class="field">
    <%= f.radio_button :gender, "male" %>
    <%= f.label :gender_male, "mÃ¤nnlich" %>
    <%= f.radio_button :gender, "female" %>
    <%= f.label :gender_female, "weiblich" %>
    <%= f.radio_button :gender, "different" %>
    <%= f.label :gender_different, "anders" %>
  </div>

  <div class="field">  
    <%= f.label :birthday %><br />
    <%= f.date_select :birthday %>    
  </div>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>
  
  <div class="actions">
  <%= f.submit "Weiter" %>
  <%= f.submit "ZurÃ¼ck", name: 'back_button' unless resource.first_step? %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<%= resource.registration_step if resource %>
<%= debug session[:registration_params] %>
