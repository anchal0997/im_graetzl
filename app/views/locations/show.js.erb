(function() {
  var $streamContainer = $("[data-behavior='stream-container']");
  var $paginateLink = $("[data-behavior='paginate-link']");

  function updateComponent() {
    $streamContainer.append("<%= j render partial: 'location_posts/stream_post', collection: @posts, as: 'post' %>");
    $paginateLink.replaceWith("<%= j view_more_link @posts %>");
  }

  updateComponent();
})();
