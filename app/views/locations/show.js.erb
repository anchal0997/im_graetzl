<% if @scope == :posts %>
  $('div.stream').append("<%= j render partial: 'locations/posts/post', collection: @new_content %>");
  $('a.link-load').replaceWith("<%= j view_more_link @new_content, params: { scope: @scope } %>")
<% else %>
  $('#<%= @scope %>').append("<%= j(render @new_content) %>")
  $('a.link-load#link-load-<%= @scope %>').replaceWith("<%= j view_more_scoped(@new_content, @scope) %>")
<% end %>
