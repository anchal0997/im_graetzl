(function() {
  var $cardContainer = $("[data-behavior='locations-card-container']");
  var $paginateLink = $("[data-behavior='locations-paginate-link']");

  <% if params[:page].blank? %>
    <% if @locations.empty? %>
      $cardContainer.html("<%= j render 'empty_message' %>")
    <% else %>
      $cardContainer.find(".cardBox").remove();
      $cardContainer.append("<%= j render @locations %>")
    <% end %>
  <% else %>
    $cardContainer.append("<%= j render @locations %>");
  <% end %>

  <% if @locations.next_page.present? %>
    $paginateLink.attr('href', "<%= j next_page_url %>").show();
  <% else %>
    $paginateLink.hide();
  <% end %>
})();
