<% small ||= false %>
<div class="cardBox -location <%= '-small' if small %>">
  <div class="cardBoxHeader">
    <%= cover_photo_for(location) %>
    <div class="location-shortfacts">
      <%= link_to [location.graetzl, location] do %>
          <%= avatar_for(location, fill: [200, 200], class: 'avatar-square') %>
          <div class="name"><%= location.name %></div>
      <% end %>
      <div class="category"><%= location.category.name %></div>
      <% if location.address %>
        <div class="address">
          <svg class="icon-location"><use xlink:href="#icon-location"></use></svg>
          <%= "#{location.address.street_name} #{location.address.street_number}" %>
        </div>
      <% end %>
    </div>
    <div class="sideflag -R"><%= link_to location.graetzl.name, location.graetzl %></div>
  </div>
  <div class="slogan"><%= location.slogan %></div>
  <div class="txt"><%= truncate(location.description, length: 100) %></div>
  <% if next_meeting = location.meetings.upcoming.first %>
    <%= render 'meeting_teaser', meeting: next_meeting %>
  <% end %>
</div>
