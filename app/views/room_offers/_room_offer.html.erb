<div class="cardBox -location">
  <div class="cardBoxHeader">
    <%= link_to room_offer do %>
      <%= cover_photo_for room_offer %>
    <% end %>
    <% if room_offer.graetzl %>
      <div class="categoryicon">
        <%= "#{room_offer.district.zip}, #{room_offer.graetzl.name}" %>
      </div>
    <% end %>
  </div>
  <div class="cardBoxContent -roomoffer">
    <div class="location-shortfacts roomoffer-shortfacts">
      <%= link_to room_offer, class: 'locationlogo' do %>
        <%= avatar_for room_offer.user, 200, 'img-square' %>
      <% end %>
      <%= link_to room_offer, class: 'typelink' do %>
      <div class="locationtxt">
        <div class="roomtype">
            <%= t("activerecord.attributes.room_offer.offer_types.#{room_offer.offer_type}") %>
        </div>
      </div>
      <% end %>
    </div>
    <div class="slogan"><%= room_offer.slogan %></div>
    <div class="txt">
      <p><%= truncate room_offer.room_description, length: 100 %></p>
    </div>
    <% if room_offer.wants_collaboration? %>
      <div class="collaboration icontxt">
        <%= icon_tag "urgent-extra-notice-info-announcement" %>
        Interesse an gem. Kooperationen.
      </div>
    <% end %>
  </div>
</div>
