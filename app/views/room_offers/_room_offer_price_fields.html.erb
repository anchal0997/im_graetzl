<div class="nested-fields">
  <div class="input-field price">
    <%= f.label :amount do %>
    <svg class="icon-currency-euro"><use xlink:href="#icon-currency-euro"></use></svg>
    <% end %>
    <%= f.text_field :amount, placeholder: "Preis in €" %>
  </div>
  <div class="input-field name">
    <%= f.label :name, 'Beschreibung' %>
    <%= f.text_field :name, placeholder: "z.B: pro Monat für 2 Tage / Woche" %>
  </div>
  <%= link_to_remove_association f do %>
    <div class="btn-delete"><svg class="icon-trash-delete-remove"><use xlink:href="#icon-trash-delete-remove"></use></svg></div>
  <% end %>
</div>
