(function() {
  var $cardContainer = $("[data-behavior='activities-card-container']");
  var $paginateLink = $("[data-behavior='activities-paginate-link']");

  <% if params[:page].blank? %>
    <% if @activity.empty? %>
      $cardContainer.html("<%= j render 'empty_message' %>")
    <% else %>
      $cardContainer.html("<%= j render @activity_with_zuckerls %>")
    <% end %>
  <% else %>
    $cardContainer.append("<%= j render @activity %>");
  <% end %>

  <% if @activity.next_page.present? %>
    $paginateLink.attr('href', "<%= j next_page_url %>").addClass("show");
  <% else %>
    $paginateLink.removeClass("show");
  <% end %>

})();
