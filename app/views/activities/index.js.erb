(function() {
  var $cardContainer = $("[data-behavior='activites-card-container']");
  var $paginateLink = $("[data-behavior='activites-paginate-link']");

  <% if params[:page].blank? %>
    <% if @activity.empty? %>
      $cardContainer.html("<%= j render 'empty_message' %>")
    <% else %>
      $cardContainer.html("<%= j render @decorated_activity %>")
    <% end %>
  <% else %>
    $cardContainer.append("<%= j render @activity %>");
  <% end %>

  <% if @activity.next_page.present? %>
    $paginateLink.attr('href', "<%= j next_page_url %>").show();
  <% else %>
    $paginateLink.hide();
  <% end %>

})();
