                  name: response[i].name,
                  slogan: response[i].slogan,
                  slug: response[i].slug,
                  state: response[i].state,
                  graetzl_id: response[i].graetzl_id,
                  graetzl_name: '',
                  category_id: response[i].category_id,
                  created_at: response[i].created_at,
                  location_path: ''
