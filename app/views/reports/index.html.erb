        $.ajax( {
          url:'/admin/users/'+ id +'.json',
          method:'GET',
          success:function(response) {
            console.log(response);

            user.last_login = response.last_sign_in_at? new Date(response.last_sign_in_at) : '';
            user.newsletter = response.newsletter;
            user.website = response.website;
            user.avatar = response.avatar;

            resolve('user');
