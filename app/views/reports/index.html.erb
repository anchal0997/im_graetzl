    // Get User Locations
    var requestUserLocation = function(id){
      return new Promise( function(resolve, reject) {

        user = fetchFromID(id, 'users');
        user = user[0];

        // Get Locations from User and Push in Users Array (only once)
        if ( user.locations.length == 0 ) {
          $.ajax( {
            url:'/admin/locations.json?q%5Blocation_ownerships_user_id_eq%5D=' + id,
            method:'GET',
            success:function(response) {
              for( i=0; i < response.length; i++ ) {
                user.locations.push({
