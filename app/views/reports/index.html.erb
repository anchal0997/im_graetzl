      var user_details = requestUserDetails(user.id);
      Promise.resolve(user_details).then(function(res) {

        $('#u_last_login').html(user.last_login? moment(user.last_login).format('ll') : 'noch kein Login');
        console.log(user);
      })


      // Get User Locations
      var user_locations = requestUserLocation(user.id);
      Promise.resolve(user_locations).then(function(res) {

        for ( i=0; i<user.locations.length; i++ ) {
          user.locations[i].location_path = user.graetzl_path_app + '/locations/' + user.locations[i].slug;
        }

        for ( i=0; i<user.locations.length; i++ ) {
          $('<div><a href="' + user.locations[i].location_path + '">' + user.locations[i].name + '</a></div>')
            .appendTo('#u_location');
          $('#u_location .empty').hide();
        }

      })



      // Reset & Clear Mailings
      $('#u_mc_activity').html('');
      $('<em class="empty">Noch keine Mailings</em>')
      .appendTo('#u_mc_activity');



      // Get User Mailchimp Activities
      var mailchimpActivity = requestMCUser(user.email, 'activity');
      Promise.resolve(mailchimpActivity).then(function(res) {

        if (res != 404) {
          var activity = res.body.activity;
          console.log(activity);
          for ( i=0; i<activity.length; i++ ) {
            $('<div>'
              + '<span class="time">'
              + moment(new Date(activity[i].timestamp)).format('ll')
              + '</span>'
              + '<span class="action">'
              + activity[i].action
              + '</span>'
              + '<span class="name">'
              + activity[i].title
              + '</span></div>')
              .appendTo('#u_mc_activity');
            $('#u_mc_activity .empty').hide();
          }
          console.log(res.body.activity);
        }

      })

    }



