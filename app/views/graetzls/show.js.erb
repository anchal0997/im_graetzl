(function() {
  var $streamContainer = $("[data-behavior='stream-container']");
  var $paginateLink = $("[data-behavior='paginate-link']");

  function updateComponent() {
    $streamContainer.append("<%= j render_activities @activities %>");
    $paginateLink.replaceWith("<%= j view_more_link @activities %>");
    APP.components.stream.init();
  }

  updateComponent();
})();
