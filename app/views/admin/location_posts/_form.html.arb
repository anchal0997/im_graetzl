active_admin_form_for [:admin, resource] do |f|
  semantic_errors
  inputs do
    input :author, collection: Location.all, include_blank: false
    input :author_type, as: :hidden, input_html: { value: 'Location' }
    input :graetzl, include_blank: false
    input :title
    input :content
    has_many :images, allow_destroy: true do |i|
      i.input :file, as: :file, hint: attachment_image_tag(i.object, :file, :limit, 600, 300)
    end
  end
  actions
end
