table_for Address.where(addressable_type: 'Meeting').where.not(description: '') do
  column :beschreibung do |address|
    address.description
  end
  column :adresse do |address|
    "#{address.street_name} #{address.street_number}, #{address.zip} #{address.city}"
  end
  column :graetzl do |address|
    address.graetzl.name
  end
  column :kontext do |address|
    address.addressable.name
  end
  unless compact
    column :erstellt do |address|
      I18n.l address.created_at, format: :short
    end
    column '' do |address|
      button_to 'Location Erstellen', new_from_address_admin_locations_path(address: address)
    end
  end
end

if compact
  span do
    link_to 'Location Kandidaten Bearbeiten', admin_location_candidates_path, class: 'btn-light'
  end
end