<%= semantic_form_for [:admin, @location] do |f| %>

  <%= f.inputs name: 'Basic Location' do %>
    <%= f.input :name %>
    <%= f.input :graetzl %>
    <%= f.input :state, as: :select, collection: Location.states.keys %>
  <% end %>

  <%= f.inputs name: 'Adresse', for: :address do |address_form| %>
    <%= address_form.input :street_name %>
    <%= address_form.input :street_number %>
    <%= address_form.input :zip %>
    <%= address_form.input :city %>
    <%= address_form.input :coordinates, as: :hidden %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, as: :button %>
    <%= f.action :cancel, as: :link, class: 'btn-light' %>
  <% end %>

<% end %>