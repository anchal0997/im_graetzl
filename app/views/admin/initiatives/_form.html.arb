active_admin_form_for [:admin, resource] do |f|
  inputs 'Basic' do
    semantic_errors
    input :name
    input :description
    input :website, as: :url
    input :image, as: :file, hint: image_tag(attachment_url(f.object, :image, :fill, 100, 100))
    input :remove_image, as: :boolean if f.object.image
  end
  inputs 'Graetzl' do
    tabs do
      District.order(:zip).each do |district|
        tab district.zip do
          input :graetzls, label: false, as: :check_boxes, collection: district.graetzls
        end
      end
    end
  end
  actions
end
