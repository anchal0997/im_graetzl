(function() {
  var $streamContainer = $("[data-behavior='stream-container']");
  var $paginateLink = $(".view-more-container");

  <% if params[:page].blank? %>
    <% if @rooms.empty? %>
      $streamContainer.html("<%= j render 'empty_message' %>");
    <% else %>
      $streamContainer.html("<%= j render @rooms %>");
    <% end %>
  <% else %>
    $streamContainer.append("<%= j render @rooms %>");
  <% end %>

  <% if @rooms.empty? %>
    $paginateLink.hide();
  <% else %>
    $paginateLink.html("<%= j next_page_link %>").show();
  <% end %>
})();
