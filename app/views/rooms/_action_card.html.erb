<div class="cardbox-wrp">
  <div class="paperCard -cord1RT -illuteaser -location">
    <div class="wrp">
      <div class="user">
        <% if current_user %>
          <%= attachment_image_tag current_user, :avatar, :fill, 100, 100, fallback: 'avatar/user/100x100.png', class: 'img-round' %>
          <span><%= current_user.username %></span>
        <% else %>
          <%= image_tag('avatar/user/default.png', class: 'img-round') %>
          <span>Dein Name</span>
        <% end %>
      </div>
      <% if defined? graetzl %>
        <h3>Du möchtest eine Raum im <%= graetzl.name %> teilen?</h3>
        <%= link_to 'Teile deine Raum', select_room_offers_path, class: 'btn-primary' %>
      <% elsif defined? district %>
        <h3>Du möchtest eine Raum im <%= district.numeric %>. Bezirk teilen?</h3>
        <%= link_to 'Teile deine Raum', select_room_offers_path, class: 'btn-primary' %>
      <% else %>
        <h3>Du möchtest eine Raum im Grätzl teilen?</h3>
        <%= link_to 'Teile deine Raum', select_room_offers_path, class: 'btn-primary -rose' %>
      <% end %>
    </div>
    <div class="card"></div>
  </div>
  <% if defined? view_all %>
    <%= link_to 'Alle Raum Teiler', rooms_district_path(district), class: 'link-more' %>
  <% elsif defined? graetzl %>
    <%= link_to 'Alle Raum Teiler', rooms_path(graetzl), class: 'link-more' %>
  <% end %>
</div>
