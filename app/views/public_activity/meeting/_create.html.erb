<% content_for :user_avatar, flush: true do %>
  <%= attachment_image_tag(activity.owner, :avatar, :fill, 100, 100, fallback: 'avatar/small_default.png', class: 'img-round') %>
<% end %>

<% content_for :user_and_type, flush: true do %>
  <a href=""><%= activity.owner.username if activity.owner %></a> hat ein Treffen erstellt
  <span class="timeago">vor <%= time_ago_in_words(activity.created_at) %></span>
<% end %>

<%= render 'meetings/teaser', meeting: activity.trackable %>