<div class="entryInitialContent">
  <%= render 'public_activity/info', user: activity.trackable.initiator, entity: activity.trackable %>
  <%= render 'meetings/teaser', meeting: activity.trackable %>
</div>

<% unless activity.trackable.comments.empty? %>
  <%= render partial: 'comments/comment_inline', layout: 'layouts/stream/comment', locals: { comment: activity.trackable.comments.first } %>
<% end %>

<%= render 'comments/form_inline', commentable: activity.trackable %>

