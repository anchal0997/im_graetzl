(function() {
  var $cardContainer = $("[data-behavior='zuckerls-card-container']");
  var $paginateLink = $("[data-behavior='zuckerls-paginate-link']");

  <% if params[:page].blank? %>
    $cardContainer.html("<%= j render @zuckerls %>");
  <% else %>
    $cardContainer.append("<%= j render @zuckerls %>");
  <% end %>

  <% if @zuckerls.next_page.present? %>
    $paginateLink.attr('href', "<%= j next_page_url %>").addClass("show");
  <% else %>
    $paginateLink.removeClass("show");
  <% end %>

})();
