<% location = location_post.author %>
<div class="cardBox">
  <div class="cardBoxHeader">
    <%= link_to [location.graetzl, location, anchor: dom_id(location_post)] do %>
      <% if image = location_post.images.first %>
        <%= attachment_image_tag image, :file, :fill, 300, 250, class: 'coverImg' %>
      <% else %>
        <%= cover_photo_for location %>
      <% end %>
    <% end %>
    <div class="categoryicon">
      <%= icon_tag "location" %>
    </div>
  </div>
  <div class="cardBoxContent">
    <div class="location-shortfacts">
      <%= link_to [location.graetzl, location], class: 'locationlogo' do %>
        <%= avatar_for location %>
      <% end %>
      <div class="locationtxt">
        <%= link_to [location.graetzl, location] do %>
          <div class="name"><%= location.name %></div>
        <% end %>
        <div class="category"><%= location.category.name %></div>
        <% if location.address %>
          <div class="address">
            <%= icon_tag "location" %>
            <%= "#{location.address.street_name} #{location.address.street_number.split(%r{/}).first}" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="txt">
      <h3><%= link_to location_post.title, [location.graetzl, location, anchor: dom_id(location_post)] %></h3>
      <p><%= truncate location_post.content, length: 100 %></p>
    </div>

    <% if local_assigns[:appendix].present? %>
      <%= render 'activities/appendix', appendix: local_assigns[:appendix], parent: location_post %>
    <% end %>
  </div>
</div>
