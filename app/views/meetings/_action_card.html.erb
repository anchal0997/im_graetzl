<div class="cardbox-wrp" data-behavior="masonry-card">
  <div class="paperCard -cord1RT -illuteaser -meeting">
    <div class="wrp">
      <div class="user">
        <% if current_user %>
          <%= attachment_image_tag current_user, :avatar, :fill, 100, 100, fallback: 'avatar/user/100x100.png', class: 'img-round' %>
          <span><%= current_user.username %></span>
        <% else %>
          <%= image_tag('avatar/user/default.png', class: 'img-round') %>
          <span>Dein Name</span>
        <% end %>
      </div>

      <% if local_assigns[:graetzl] %>
        <h3>Starte ein Treffen im GrÃ¤tzl <%= graetzl.name %> oder gib dein Event bekannt</h3>
        <%= link_to 'Treffen eintragen', new_meeting_path(graetzl_id: graetzl.id), class: 'btn-primary' %>
      <% elsif local_assigns[:district] %>
        <h3>Starte ein Treffen, einen Workshop oder ein Event im <%= district.numeric %>. Bezirk</h3>
        <%= link_to 'Jetzt loslegen', new_meeting_path, class: 'btn-primary' %>
      <% else %>
        <h3>Starte dein eigenes Treffen, trage ein<br>Event & Initatitive ein.</h3>
        <%= link_to 'Jetzt loslegen', new_user_session_path, class: 'btn-primary -rose' %>
      <% end %>
    </div>
    <div class="card"></div>
  </div>

  <% if local_assigns[:view_all] %>
    <% if local_assigns[:graetzl] %>
      <%= link_to 'Alle Treffen & Events', meetings_graetzl_path(graetzl), class: 'link-more' %>
    <% elsif local_assigns[:district] %>
      <%= link_to 'Alle Treffen & Events', meetings_district_path(district), class: 'link-more' %>
    <% else %>
      <%= link_to 'Alle Treffen & Events', meetings_wien_path, class: 'link-more' %>
    <% end %>
  <% end %>
</div>
