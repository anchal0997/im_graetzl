<% title("Treffen im #{@graetzl.name}") %>
<section class="meetings-overview">
  <h1 class="hl-main">Komm doch dazu - aktuelle<br><span>Treffen, Events & Veranstaltungen</span></h1>
  <div class="meetingBoxes">
    <%= render partial: 'box', collection: @upcoming_meetings.first(2), as: 'meeting' %>
    <%= render 'box_action' %>
    <%= render partial: 'box', collection: @upcoming_meetings.offset(2), as: 'meeting' %>
  </div>
  <% if @past_meetings.present? %>
    <h1 class="hl-main">Vergangene Treffen im <span><%= @graetzl.name %></span></h1>
    <div class="meetingBoxes">
      <%= render partial: 'meetings/box', collection: @past_meetings, as: 'meeting' %>
    </div>
  <% end %>
</section>