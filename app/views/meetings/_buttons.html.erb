<% if user_signed_in? %>

  <% if current_user.initiated?(meeting) %>

    <%= button_to edit_graetzl_meeting_path(meeting.graetzl, meeting), method: :get, class: 'btn-userCallToAction' do %>
      <%= image_tag current_user.avatar_url(:small), class: 'img-round' %> Treffen bearbeiten
    <% end %>

  <% elsif current_user.going_to?(meeting) %>

    <%= button_to going_to_path(graetzl_id: meeting.graetzl, id: current_going_to(meeting)), method: :delete, remote: true, class: 'btn-userCallToAction' do %>
        <%= image_tag current_user.avatar_url(:small), class: 'img-round' %> Nicht mehr teilnehmen
    <% end %>

  <% else %>

    <%= button_to going_tos_path(meeting_id: meeting.id, graetzl_id: meeting.graetzl), remote: true, class: 'btn-userCallToAction' do %>
      <%= image_tag current_user.avatar_url(:small), class: 'img-round' %> Am Treffen teilnehmen
    <% end %>

  <% end %>

<% else %>

  <%= button_to new_user_session_path, method: :get, class: 'btn-userCallToAction' do %>
    <%= image_tag 'avatar/small_default.png', class: 'img-round' %> Am Treffen teilnehmen
  <% end %>

<% end %>
  
