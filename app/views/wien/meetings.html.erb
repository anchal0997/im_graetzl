<%
  meta(
    title: t('.title'),
    description: t('.description'),
    robots: 'index, follow',
    og_title: t('.title'),
    og_description: t('.description'),
    og_image: image_url('meta/og_logo.png')
  )
%>

<section class="wien -overview-pages masonryFilterGrid">
  <%= render 'header' %>

  <div class="hl-subtext">
    <h1><em>Treffen & Events</em></h1>
    <p>Motto: Runter vom Sofa & mitten rein ins Grätzlleben</p>
  </div>

  <%= form_tag meetings_path, method: :get, remote: true, class: 'cards-filter' do %>
    <div class="filter-selection-text">
      Zeige mir aus <%= link_to 'allen Bezirken', '#filter-modal-bezirk', data: { no_filter_label: 'allen Bezirken'} %>
    </div>
  <% end %>

  <div id="filter-modal-bezirk" class="filter-modal">
    <%= render 'filters/district_graetzl' %>
  </div>

  <div class="masonry-wrapper">
    <div class="cards-container" data-behavior="meetings-card-container"></div>
    <%= link_to 'Mehr anzeigen', 'javascript:', remote: true, class: 'link-load -big', data: { disable_with: 'lädt...', behavior: 'meetings-paginate-link' } %>
  </div>
</section>
