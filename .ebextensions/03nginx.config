container_commands:
  01_reload_nginx:
    command: "service nginx reload"

files:
  "/etc/nginx/conf.d/proxy.conf" :
    mode: "000755"
    owner: ec2-user
    group: ec2-user
    content: |
      client_max_body_size 50M;
  "/etc/nginx/conf.d/rewrite.conf" :
    mode: "000755"
    owner: ec2-user
    group: ec2-user
    content: |
      server {
        rewrite ^/(.*)/$ /$1 permanent;
      }
